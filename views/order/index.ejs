</head>

<body >

<!-- Start Header Area -->
<nav class="header-navbar navbar navbar-with-menu navbar-fixed-top navbar-semi-light bg-gradient-x-grey-blue">

    <% include ./../default/header %>
</nav>
<% include ./../default/menu %>
<section class="cart_area">
    <div class="app-content content container-fluid">
        <div class="content-wrapper">
            <div class="content-body">

                <div class="row">
                    <div class="card">
                        <div class="card-header">
                            <div class="form-group row">
                                <div class="col-sm-6 row">
                                    <div class="col-md-4">
                                        <button type="submit" onclick="done()" class="btn btn-sm btn-success">
                                            <i class="ft-search">Đã giao</i>
                                        </button>
                                    </div>

                                    <div class="col-md-4">
                                        <button type="submit" onclick="delivering()" class="btn btn-sm btn-primary">
                                            <i class="ft-search">Đang giao</i>
                                        </button>
                                    </div>

                                    <div class="col-md-4">
                                        <button type="submit" onclick="just()" class="btn btn-sm btn-warning">
                                            <i class="ft-search">Chưa giao</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div class="card-body  in">
                                <div class="table-responsive">
                                    <table id="done" class="table table-bordered mb-0" style="">
                                        <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Tên khách hàng</th>
                                            <th>Trạng thái</th>
                                            <th>Tổng tiền</th>
                                            <th>Ngày tạo</th>
                                            <th>Địa chỉ</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <% for(var i=0; i< orders.length; i++){ %>
                                            <% if(orders[i].status == "2"){ %>
                                                <tr>
                                                    <td><%= orders[i].id %></td>
                                                    <td><%= orders[i].customer_name %></td>
                                                    <td>
                                                        <div class="tag tag-success">Đã giao</div>
                                                    </td>
                                                    <td><%= orders[i].sum_money %></td>
                                                    <td><%= orders[i].create_at %></td>
                                                    <td><%= orders[i].address %></td>
                                                </tr>
                                            <% }%>
                                        <% }%>
                                        </tbody>
                                    </table>

                                    <table id="delivering" class="table table-bordered mb-0" style="display:none;">
                                        <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Tên khách hàng</th>
                                            <th>Trạng thái</th>
                                            <th>Tổng tiền</th>
                                            <th>Ngày tạo</th>
                                            <th>Địa chỉ</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <% for(var i=0; i< orders.length; i++){ %>
                                            <% if(orders[i].status == "1"){ %>
                                                <tr>
                                                    <td><%= orders[i].id %></td>
                                                    <td><%= orders[i].customer_name %></td>
                                                    <td>
                                                        <button
                                                                onclick="location.href='order/changestatus/<%=orders[i].id%>'"
                                                                type="button" class="tag tag-primary">Đang giao</button>
                                                    </td>
                                                    <td><%= orders[i].sum_money %></td>
                                                    <td><%= orders[i].create_at %></td>
                                                    <td><%= orders[i].address %></td>

                                                </tr>
                                            <% }%>
                                        <% }%>
                                        </tbody>
                                    </table>

                                    <table id="just" class="table table-bordered mb-0" style="display:none;">
                                        <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Tên khách hàng</th>
                                            <th>Trạng thái</th>
                                            <th>Tổng tiền</th>
                                            <th>Ngày tạo</th>
                                            <th>Địa chỉ</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <% for(var i=0; i< orders.length; i++){ %>
                                            <% if(orders[i].status == "0"){ %>
                                                <tr>
                                                    <td><%= orders[i].id %></td>
                                                    <td><%= orders[i].customer_name %></td>
                                                    <td>
                                                        <button
                                                                onclick="location.href='order/changestatus/<%=orders[i].id%>'"
                                                                type="button" class="tag tag-warning">Chưa giao</button>
                                                    </td>
                                                    <td><%= orders[i].sum_money %></td>
                                                    <td><%= orders[i].create_at %></td>
                                                    <td><%= orders[i].address %></td>

                                                </tr>
                                            <% }%>
                                        <% }%>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
